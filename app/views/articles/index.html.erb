
<h1 class="text-4xl font-extrabold text-primary leading-tight text-center p-6 m-6 uppercase text-darkgray hover:shadow-sm">Articles</h1>

<div class="articlegroup m-3 group grid gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5">
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <article id="hoverElement" class="card hover:shadow-lg transition duration-300 ease-in-out transform hover:scale-105 bg-white dark:bg-gray-800 rounded-lg overflow-hidden">
        <div class="image-container">
          <% if article.image.attached? %>
            <%= image_tag article.image, class: "w-full h-64 object-cover" %>
            <% else %>
            <%= image_tag "no-image", class: "w-full h-64 object-cover"%>
            <% end %>
        </div>
        <div class="p-4">
          <h2 class="text-xl font-medium text-gray-800 dark:text-gray-300 hover:text-primary truncate">
            <%= link_to article.title, article, class: "block hover:underline" %>
          </h2>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-2 line-clamp-3">
            <%= truncate(article.body, length: 100) %>
          </p>
          <div class="mt-3">
            <%= link_to "Read More", article, class: "text-blue-500 hover:text-blue-700 font-medium" %>
          </div>
        </div>
      </article>
    <% end %>
  <% end %>
</div>

  
