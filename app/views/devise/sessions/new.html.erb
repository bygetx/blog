<h2 class="text-2xl font-semibold mb-4">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mb-4" }) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block mb-2 text-indigo-500" %><br />
    <%= f.text_field :login, autofocus: true, class: "w-full p-2 mb-6 text-indigo-700 border-b-2 border-indigo-500 outline-none focus:bg-gray-300" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block mb-2 text-indigo-500" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-2 mb-6 text-indigo-700 border-b-2 border-indigo-500 outline-none focus:bg-gray-300" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-4">
      <%= f.check_box :remember_me, class: "mr-2" %>
      <%= f.label :remember_me, class: "text-indigo-500" %>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.submit "Log in", class: "w-full bg-indigo-700 hover:bg-pink-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>


